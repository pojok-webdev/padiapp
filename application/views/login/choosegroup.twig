<!DOCTYPE html>
<html lang="en">
	{{ include('login/head.twig', { 'article': article }) }}
	<body class="login-layout">
		<div class="main-container container-fluid">
			<div class="main-content">
				<div class="row-fluid">
					<div class="span12">
						<div class="login-container">
							<div class="row-fluid">
								<div class="center">
									<h1>
										<i class="icon-leaf green"></i>
										<span class="red">Padi</span>
										<span class="white">App</span>
									</h1>
									<h4 class="blue">&copy; PadiNET</h4>
								</div>
							</div>
							<div class="space-6"></div>
							<div class="row-fluid">
								<div class="position-relative">
									<div id="login-box" class="login-box visible widget-box no-border">
										<div class="widget-body">
											<div class="widget-main">
												<h4 class="header blue lighter bigger">
													<i class="icon-coffee green"></i>
													Pilih Role
												</h4>
												<div class="space-6"></div>
													<fieldset>
														{% for group in groups %}
														<label>
															<span class="block input-icon input-icon-right">
																<a href="/users/setcurrentgroup/{{ group.name }}">{{ group.name }}</a>
																<i class="icon-user"></i>
															</span>
														</label>
														{% endfor %}
														<div class="space"></div>
													</fieldset>
											</div><!--/widget-main-->
										</div><!--/widget-body-->
									</div><!--/login-box-->
								</div><!--/position-relative-->
							</div>
						</div>
					</div><!--/.span-->
				</div><!--/.row-fluid-->
			</div>
		</div><!--/.main-container-->
	{{ include('login/scripts.twig', { 'article': article }) }}
</body>
</html>
